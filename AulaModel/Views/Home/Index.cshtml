@model IEnumerable<AulaModel.Modelo.DB.Model.Pessoa>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Novo Contato", "InserirPessoa")
</p>
<hr/>
@using (Html.BeginForm("Buscar", "Home", FormMethod.Get))
{
    <input type="text" id="edtBusca" name="edtBusca" placeholder="Buscar..." 
           class="form-control"/>
    <button type="submit" class="btn btn-primary">
        <i class="glyphicon glyphicon-search"></i> Buscar
    </button>
}
<hr />
<table class="table table-striped table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DtNascimento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DtNascimento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "ApagarPessoa", new { id=item.Id })
        </td>
    </tr>
}

</table>
